<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="400.0"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.geekbrains.brains.cloud.client.Controller">

    <HBox fx:id="authPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordFiled" onAction="#login"/>
        <Button text="Авторизоваться" onAction="#login"/>
        <!--<Button text="Зарегистрироваться" onAction="#tryToReg"/>-->
    </HBox>
    <HBox fx:id="receivePanel" managed="false" visible="false">
        <TextField fx:id="tfReceivingFileName" focusTraversable="false"
                   promptText="Укажите имя файла на сервере, который хотите скачать" HBox.hgrow="ALWAYS"/>
        <Button onAction="#receiveFile" text="Скачать"/>

    </HBox>
    <HBox fx:id="transferPanel" managed="false" visible="false">
        <TextField fx:id="tfTransferFileName" focusTraversable="false"
                   promptText="Укажите имя файла на винте, который хотите записать" HBox.hgrow="ALWAYS"/>
        <Button onAction="#transferFile" text="записать"/>
    </HBox>
    <ListView fx:id="filesList" VBox.vgrow="ALWAYS"/>
    <HBox>
        <Button onAction="#unlogin" text="Выход"/>
    </HBox>
</VBox>
