<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="400.0"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.geekbrains.brains.cloud.client.Controller">
    <Label fx:id="infoLabel"/>
    <HBox fx:id="authPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordFiled" onAction="#login"/>
        <Button text="Авторизоваться" onAction="#login"/>
        <Button text="Зарегестрироваться" onAction="#register"/>
    </HBox>
    <HBox fx:id="transferPanel" managed="false" visible="false">
        <Label fx:id="filesDragAndDrop" text="Drop files here!" wrapText="true" alignment="CENTER" prefHeight="300"
               prefWidth="400"/>
    </HBox>
    <HBox fx:id="receivePanel" managed="false" visible="false">
        <ListView fx:id="filesList"/>
        <VBox>
            <Button fx:id="receiveFileBtn" onAction="#receiveFile" text="Скачать"/>
            <Button fx:id="deleteFileBtn" onAction="#deleteFile" text="Удолить"/>
            <Button fx:id="renameFileBtn" onAction="#renameFile" text="Переименовать"/>
        </VBox>
    </HBox>
    <HBox fx:id="exitPanel" managed="false" visible="false">
        <Button onAction="#unlogin" text="Выход"/>
    </HBox>
</VBox>
